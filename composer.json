{
  "name": "croacworks/yii2-essentials",
  "description": "Essential set for Yii2: authorization by FQCN/action, typed settings, file storage, UI alerts and MetaHelper.",
  "type": "yii2-extension",
  "license": "BSD-3-Clause",
  "require": {
    "php": ">=8.1",
    "yiisoft/yii2": "~2.0.0",
    "yiisoft/yii2-bootstrap5": "~2.0",
    "yiisoft/yii2-imagine": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "croacworks\\\\essentials\\\\": "src/"
    }
  },
  "extra": {
    "bootstrap": "croacworks\\essentials\\Bootstrap"
  }
}
